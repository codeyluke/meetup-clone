<h1>Please Login</h1>

<%= form_with url: sessions_path, local: true do |form| %>
    <div class="field">
        <%= form.text_field :email, placeholder: "Enter email"%>
    </div>
    <div class="field">
        <%= form.password_field :password, placeholder: "Enter password"%>
    </div>

    <div class="actions">
        <%= form.submit "Login" %>
    </div>
<% end %>